<%@ Master Language="C#" Inherits="System.Web.Mvc.ViewMasterPage" %>

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="pt-BR">
<head>
    <title>BigBallz<asp:ContentPlaceHolder ID="TitleContent" runat="server" /></title>
    <meta http-equiv="Content-Type" content="application/xhtml+xml; charset=utf-8" />
    <meta name="description" content="BigBallz, o Bolão da Copa do Mundo" />
    <meta name="keywords" content="Bolão, Copa do Mundo, Fifa, World Cup, Soccer, Futebol, Aposta, Bet" />
    <meta name="robots" content="index, follow" />
    <meta property="fb:app_id" content="<%=ConfigurationManager.AppSettings["fb-appid"]%>"/>
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <%=Html.Css("fifa/jquery-ui-1.8.1.custom")%>
    <%=Html.Css("ui.jqgrid")%>
    <%=Html.Css("screen")%>
    <%=Html.Css("~/public/font-awesome/css/font-awesome.min.css")%>
    <%=Html.Css("site")%>
    <%=Html.Css("chardinjs")%>
    <% if (!Context.IsDebuggingEnabled) { %>
    <script>
        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
      m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
            })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

            ga('create', '<%=ConfigurationManager.AppSettings["google-tid"]%>', 'bigballz.com.br');
            ga('require', 'linkid', 'linkid.js');
            ga('require', 'displayfeatures');
            <% if (Request.IsAuthenticated)
               { %>
            ga('set', '&uid', '<%= Context.User.Identity.Name %>'); // Set the user ID using signed-in user_id.
            <% } %>
            ga('send', 'pageview');
    </script>
    <% } %>
</head>
<body>
    <div id="fb-root"></div>
    <script>(function (d, s, id) {
        var js, fjs = d.getElementsByTagName(s)[0];
        if (d.getElementById(id)) return;
        js = d.createElement(s); js.id = id;
        js.src = "//connect.facebook.net/en_US/sdk.js#xfbml=1&appId=121207554580263&version=v2.0";
        fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));</script>
    <div id="fixed">
        <div id="flash" class="ui-widget ui-helper-hidden">
            <div class="ui-state-error ui-corner-all" style="padding: 0 .7em;">
                <p>
                    <span class="ui-icon ui-icon-alert" style="float: left; margin-right: .3em;"></span>
                    <strong class="flashType"></strong><span class="flashMsg"></span><span class="ui-icon ui-icon-close"
                        style="float: right; margin-right: .3em; cursor: pointer"></span>
                </p>
            </div>
        </div>
        <div id="header">
            <div>
                <div id="logindisplay"  data-intro="Clique aqui para sair do BigBallz de forma segura" data-position="bottom">
                    <% Html.RenderPartial("LogOnUserControl"); %>
                </div>
                <h1 id="bb-logo"><strong>BigBallz</strong>, o Bolão da Copa do Mundo!</h1>
            </div>
            <% Html.RenderPartial("Menu"); %>
        </div>
        <%if (Request.IsAuthenticated) {%>
        <div class="colmask rightmenu">
            <div class="colleft">
        <%} else {%>
                <div class="colmask fullpage">
        <%}%>
                    <div class="col1">
                        <!-- Column 1 start -->
                        <asp:ContentPlaceHolder ID="MainContent" runat="server" />
                        <!-- Column 1 end -->
                    </div>
                <%if (Request.IsAuthenticated) {%>
                    <div class="col2" data-intro="Neste menu lateral você encontra o resumo de tudo que acontece no BigBallz, como o Top 5 geral, o Top 5 do dia, alertas sobre as suas apostas pendentes, além do seu perfil onde você confere a sua foto, seu nome, sua pontuação e a sua colocação." data-position="left">
                        <!-- Column 2 start -->
                        <%Html.RenderPartial("InfoMenu"); %>
                        <!-- Column 2 end -->
                    </div>
                </div>
                <%}%>
            </div>
            <div id="footer">
                <p>
                    <%=Html.ActionLink("BigBallz", "index", "home")%> |
                    <%=Html.ActionLink("Regulamento", "Rules", "Home") %> |
                    v<%=Context.GetVersion()%></p>
            </div>
        </div>
    </div>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.8.1/jquery-ui.min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.6.0/moment.min.js" type="text/javascript"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.6.0/lang/pt-br.js" type="text/javascript"></script>
    <%=Html.ScriptInclude("jquery.ui.datepicker-pt-BR.js")%>
    <%=Html.ScriptInclude("Site.Master.js")%>
    <asp:ContentPlaceHolder ID="Scripts" runat="server" />
    <%=Html.Flash()%>
    <%=Html.MiniProfiler() %>
    <script type="text/javascript" src="https://s3.amazonaws.com/assets.freshdesk.com/widget/freshwidget.js"></script>
    <script type="text/javascript">
        FreshWidget.init("", { "queryString": "&widgetType=popup", "widgetType": "popup", "buttonType": "text", "buttonText": "Precisa de ajuda? Clique Aqui", "buttonColor": "black", "buttonBg": "#FFFFFF", "alignment": "4", "offset": "270px", "formHeight": "500px", "url": "https://bigballz.freshdesk.com" });
    </script>
    <%if (Context.User.Identity.IsAuthenticated) {%>
    <script type='text/javascript'>if (new Date().getTime() < 1403138675000) { var fc_CSS = document.createElement('link'); fc_CSS.setAttribute('rel', 'stylesheet'); var isSecured = (window.location && window.location.protocol == 'https:'); fc_CSS.setAttribute('type', 'text/css'); fc_CSS.setAttribute('href', ((isSecured) ? 'https://d36mpcpuzc4ztk.cloudfront.net' : 'http://assets1.chat.freshdesk.com') + '/css/visitor.css'); document.getElementsByTagName('head')[0].appendChild(fc_CSS); var fc_JS = document.createElement('script'); fc_JS.type = 'text/javascript'; fc_JS.src = ((isSecured) ? 'https://d36mpcpuzc4ztk.cloudfront.net' : 'http://assets.chat.freshdesk.com') + '/js/visitor.js'; (document.body ? document.body : document.getElementsByTagName('head')[0]).appendChild(fc_JS); window.freshchat_setting = ''; }</script>
    <%}%>
</body>
</html>